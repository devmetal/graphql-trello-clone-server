{
  "name": "plano-ql",
  "version": "0.0.1",
  "description": "Graphql Talk Server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --env=node",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint src",
    "ci": "yarn lint && yarn test",
    "husky": "husky-upgrade",
    "json-server": "json-server --watch db.json --port 3004"
  },
  "dependencies": {
    "apollo-server": "^2.0.0",
    "apollo-server-express": "^2.0.0",
    "axios": "^0.17.1",
    "bcrypt-nodejs": "^0.0.3",
    "convict": "^4.0.2",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-subscriptions": "^0.5.6",
    "json-server": "^0.12.1",
    "jwt-simple": "^0.5.1",
    "moment": "^2.20.1",
    "mongoose": "5",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "subscriptions-transport-ws": "^0.9.5"
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.4.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^1.1.1",
    "jest": "^22.1.4",
    "lint-staged": "^7.3.0",
    "mongodb-memory-server": "^2.4.2",
    "nodemon": "^1.14.11",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage",
    "forceExit": true,
    "setupTestFrameworkScriptFile": "./jestSetup.js"
  }
}
